<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

    <persistence-unit name="OpenfactPU">
        <jta-data-source>java:jboss/datasources/OpenfactDS</jta-data-source>
        <properties>
            <!-- Properties for Hibernate -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="false"/>

            <!-- Use Infinispan second level cache provider -->
            <property name="hibernate.cache.use_second_level_cache=true" value="true"/>
        </properties>
    </persistence-unit>

</persistence>