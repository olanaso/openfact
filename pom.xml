    <profiles>
        <profile>
            <id>distribution</id>
        </profile>
        <profile>
            <id>jboss-release</id>
        </profile>
        <profile>
            <id>kit</id>
            <activation/>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-failsafe-plugin</artifactId>
                        <version>2.19</version>
                        <configuration>
                            <includes>
                                <include>**/*KT.*</include>
                            </includes>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

