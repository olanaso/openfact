<?xml version='1.0' encoding='UTF-8'?>

<!--  Template used by WildFly build when directed to include Openfact subsystem in a configuration. -->
<config>
    <extension-module>org.keycloak.keycloak-adapter-subsystem</extension-module>
    <subsystem xmlns="urn:jboss:domain:keycloak:1.1">
        <datasources>
            <secure-deployment name="openfact.war">
                <realm>openfact</realm>
                <auth-server-url>http://localhost:8080/auth</auth-server-url>
                <bearer-only>true</bearer-only>
                <ssl-required>EXTERNAL</ssl-required>
                <resource>openfact</resource>
                <use-resource-role-mappings>true</use-resource-role-mappings>
            </secure-deployment>
        </datasources>
    </subsystem>
</config>
